<% layout("/layouts/boilerplate") %>



<!-- Filter icons  -->
<div class="filters d-flex justify-content-start align-items-baseline">
    <div class="filter text-center">
        <i class="fa-solid fa-fire"></i>
        <p class="">Trending</p>
    </div>
    <div class="filter text-center">
        <i class="fa-solid fa-bed"></i>
        <p class="">Rooms</p>
    </div>
    <div class="filter text-center">
        <i class="fa-solid fa-mountain-sun"></i>
        <p class="">Amazing views</p>
    </div>
    <div class="filter text-center">
        <i class="fa-solid fa-city"></i>
        <p class="">Iconic cities</p>
    </div>
    <div class="filter text-center">
        <i class="fa-solid fa-person-swimming"></i>
        <p class="">Amazing pools</p>
    </div>
    <div class="filter text-center">
        <i class="fa-solid fa-umbrella-beach"></i>
        <p class="">Beach</p>
    </div>
    <div class="filter text-center">
        <i class="fa-solid fa-house-chimney"></i>
        <p class="">Cabins</p>
    </div>
    <div class="filter text-center">
        <i class="fa-solid fa-fire"></i>
        <p class="">OMG!</p>
    </div>
    <div class="filter text-center">
        <i class="fa-solid fa-igloo"></i>
        <p class="">Dome</p>
    </div>
    <div class="filter text-center">
        <i class="fa-solid fa-warehouse"></i>
        <p class="">Warehouse</p>
    </div>
    <div class="filter text-center">
        <i class="fa-solid fa-person-skiing"></i>
        <p class="">Skiing</p>
    </div>
    <div class="tax-button d-flex justify-content-end">
        <div class="border-tax">
            <div class="form-check form-switch form-check-reverse">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckReverse">
                <label class="form-check-label" for="flexSwitchCheckReverse">Display Total after taxes</label>
            </div>
        </div>
    </div>
</div>

<!-- Render all the listings card  -->
<div class="container">
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 justify-content-center">
        <% for(let list of lists) { %>
        <div class="col mb-4 d-flex justify-content-center">
            <a class="a-lists" href="/listings/view/<%= list._id %>">
                <div class="card" style="width: 20rem;">
                    <img src="<%= list.image.url %>" class="card-img-top" alt="Image" style="height: 20rem;">
                    <div class="card-body">
                        <h5 class="card-title"><%= list.title %></h5>
                        <p class="price">&#8377;<span class="price-value"><%= list.price.toLocaleString("en-In") %></span> / night <span class="gst">+ gst</span></p>
                    </div>
                </div>
            </a>
        </div>
        <% } %>
    </div>
</div>

<script src="../../javasripts/tax-button.js"></script>
